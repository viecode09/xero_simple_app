<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Contact</th>
      <th>Xero invoice</th>
      <th>Description</th>
      <th>Unit amount</th>
      <th>Quantity</th>
      <th>Account code</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.contact_id %></td>
        <td><%= invoice.xero_invoice_id %></td>
        <td><%= invoice.description %></td>
        <td><%= invoice.unit_amount %></td>
        <td><%= invoice.quantity %></td>
        <td><%= invoice.account_code %></td>
        <td><%= invoice.due_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invoice', new_contact_invoice_path(params[:contact_id]) %>
